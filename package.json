{
  "name": "hx-optimistic",
  "version": "1.0.0",
  "description": "HTMX extension for optimistic UI updates with automatic rollback on errors",
  "main": "hx-optimistic.js",
  "types": "hx-optimistic.d.ts",
  "files": [
    "hx-optimistic.js",
    "hx-optimistic.min.js",
    "hx-optimistic.d.ts",
    "README.md"
  ],
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:browser": "open test-features.html",
    "test:all": "npm run test:run && npm run test:e2e",
    "build": "esbuild src/index.js --bundle --format=iife --outfile=hx-optimistic.js && npm run minify",
    "minify": "npx terser hx-optimistic.js -o hx-optimistic.min.js --compress --mangle",
    "dev": "npx http-server -p 8080 -c-1",
    "prepublishOnly": "npm run build && npm run test:run"
  },
  "keywords": [
    "htmx",
    "extension",
    "optimistic",
    "ui",
    "updates",
    "rollback",
    "javascript",
    "frontend"
  ],
  "author": "HTMX Community",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/hx-optimistic.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/hx-optimistic/issues"
  },
  "homepage": "https://github.com/your-org/hx-optimistic#readme",
  "peerDependencies": {
    "htmx.org": "^1.9.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.6.0",
    "esbuild": "^0.21.0",
    "terser": "^5.15.0",
    "http-server": "^14.1.1",
    "vitest": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "jsdom": "^24.0.0",
    "c8": "^9.1.0",
    "@playwright/test": "^1.44.0",
    "husky": "^9.0.11"
  },
  "engines": {
    "node": ">=14"
  }
}